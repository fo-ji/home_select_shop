.wrapper__mypage
  = render "layouts/sub-header"

  .mypage__container
    %h1.mypage__container--title ショップ情報
    .mypage__container--all
      = render "side-bar"

      .container__right
        %ul.container__right--info
          %li.info__title ショップ登録情報
          %li.info__list
            .info__list--label 店舗名
            .info__list--value
              = @shop.name
          %li.info__list
            .info__list--label メールアドレス
            .info__list--value
              = @shop.email
          %li.info__list
            .info__list--label アバター
            .info__list--value
              - if @shop.avatar.url.present?
                = image_tag @shop.avatar.url, class: "avatar__show"
              - else
                = image_tag "no_image.png", class: "avatar__show"
          %li.info__list
            .info__list--label プロフィール
            .info__list--value
              = @shop.introduction
          %li.info__list
            .info__list--label 住所
            .info__list--value
              = "〒" + @shop.postal_code + " " + @shop.prefecture + @shop.city + @shop.address + " " + @shop.apartment
          %li.info__list
            .info__list--label 電話番号
            .info__list--value
              = @shop.phone_number
          %li.info__list
            .info__list--label スタイリスト
            .info__list--value
              - @shop.users.each do |stylist|
                .stylist__name
                  = stylist.nickname + "さん"
          %li.info__list
            .info__list--label オフィシャルサイト
            .info__list--value
              = @shop.official_site
          %li.info__list
            .info__list--label facebookアカウント
            .info__list--value
              = @shop.facebook_account
          %li.info__list
            .info__list--label LINEアカウント
            .info__list--value
              = @shop.line_account
          %li.info__list
            .info__list--label Instagramアカウント
            .info__list--value
              = @shop.instagram_account

  .blank__space
