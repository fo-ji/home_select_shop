.wrapper__login
  = render "layouts/sub-header"

  .login__container
    %h1.login__container--title ログイン
    .form__container--contents
      .contents__left
        %h2.contents__left--title メールアドレスでログインする
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "text__field--login", autocomplete: "email"
          .field
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "text__field--login"
          .actions
            = f.submit "ログイン", class: "submit-btn"

      .contents__right
        %h2.contents__right--title SNSでログインする
        %ul.sns__login
          %li.sns__login--google Googleアカウントでログイン
          %li.sns__login--facebook facebookアカウントでログイン
          %li.sns__login--twitter twitterアカウントでログイン

  .blank__space
