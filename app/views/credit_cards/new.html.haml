.wrapper__form
  - breadcrumb :new_creditcard
  = render "layouts/sub-header"

  .form__container
    %h1.form__container--title クレジットカード登録
    .form__container--contents
      = form_tag(pay_credit_cards_path, method: :post, id: "charge-form",  name: "inputForm") do
        .field
          %label.label__text カード番号
          %span.required__item 必須
          = text_field_tag("number", "", class: "text__field", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number")
        .field
          %label.label__text 有効期限
          %span.required__item 必須
          %select#exp_month{name: "exp_month", type: "text", class: "text__field--half"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span 月/
          %select#exp_year{name: "exp_year", type: "text", class: "text__field--half"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span 年
        .field
          %label.label__text セキュリティコード
          %span.required__item 必須
          = text_field_tag("cvc", "", class: "text__field--half", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc")
        .actions
          #card_token
          = submit_tag("追加する", id: "token_submit", class: "submit-btn")

    .blank__space
